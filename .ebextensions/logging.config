commands:
    00_create_dir:
        command: mkdir -p /opt/python/log
    01_create_file:
        command: touch /opt/python/log/django.log
    02_change_permissions:
        command: chmod g+s /opt/python/log/django.log
    03_change_owner:
        command: chown webapp:webapp /opt/python/log/django.log
