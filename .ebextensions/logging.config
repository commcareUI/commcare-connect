files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/extra-logs.conf" :
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/cfn-init-cmd.log
files:
  "/opt/aws/amazon-cloudwatch-agent/etc/beanstalk.json":
    mode: "000644"
    owner: root
    group: root
    content: |
      {
        "logs": {
          "logs_collected": {
            "files": {
              "collect_list": [
                {
                  "file_path": "/var/log/eb-engine.log",
                  "log_group_name": "/aws/elasticbeanstalk/Commcare-connect-env/var/log/eb-engine.log",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/eb-hooks.log",
                  "log_group_name": "/aws/elasticbeanstalk/Commcare-connect-env/var/log/eb-hooks.log",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/nginx/access.log",
                  "log_group_name": "/aws/elasticbeanstalk/Commcare-connect-env/var/log/nginx/access.log",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/nginx/error.log",
                  "log_group_name": "/aws/elasticbeanstalk/Commcare-connect-env/var/log/nginx/error.log",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/httpd/access_log",
                  "log_group_name": "/aws/elasticbeanstalk/Commcare-connect-env/var/log/httpd/access_log",
                  "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/httpd/error_log",
                  "log_group_name": "/aws/elasticbeanstalk/Commcare-connect-env/var/log/httpd/error_log",
                  "log_stream_name": "{instance_id}"
                },
                {
                 "file_path": "/var/log/web.stdout.log",
                 "log_group_name": "/aws/elasticbeanstalk/Commcare-connect-env/var/log/web.stdout.log",
                 "log_stream_name": "{instance_id}"
                },
                {
                  "file_path": "/var/log/cfn-init-cmd.log",
                  "log_group_name": "/aws/elasticbeanstalk/$(EB_ENVIRONMENT_NAME)/var/log/cfn-init-cmd.log",
                  "log_stream_name": "{instance_id}"
                }
              ]
            }
          }
        }
      }
option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 180
